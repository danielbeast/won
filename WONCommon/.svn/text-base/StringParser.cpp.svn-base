///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
template <class T> 
static void ListToString(const std::list<T> &theList, string &theStr)
{
	std::list<T>::const_iterator anItr = theList.begin();
	while(anItr!=theList.end())
	{
		StringParser::ValueToString(*anItr,theStr);
		++anItr;
		if(anItr!=theList.end())
			theStr += ", ";

	}
}

