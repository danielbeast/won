}


///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
template<class T>
static bool ReadListList(StringParser *theParser, std::list<std::list<T> > &theList)
{
	while(true)
	{
		if(!theParser->CheckNextChar('('))
			break;

		theList.push_back(std::list<T>());
		if(!ReadList<T>(theParser,theList.back()))
			return false;

		if(!theParser->CheckNextChar(')'))
			return false;

		if(!theParser->CheckNextChar(','))
			break;
	}

	return true;
}

